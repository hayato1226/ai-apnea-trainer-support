---
const features = [
  {
    title: "Adaptive AI Coach",
    description: "Deep-learning session adjustments based on your physiological data. The coach evolves as you progress, optimizing your holds for maximum efficiency.",
    icon: `<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2v20"/><path d="M2 12h20"/><path d="M12 12 2.1 12.3"/><path d="M12 12c.5-1.5 2.5-1.5 3 0"/></svg>`
  },
  {
    title: "Professional Analytics",
    description: "Advanced CO2 and O2 tables with metabolic profiling. Track recovery phases and breath-hold curves with medical precision.",
    icon: `<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>`
  },
  {
    title: "Elite Bio-Feedback",
    description: "Real-time heart rate and HRV monitoring. Synchronized audio-tactile alerts keep you focused while maintaining deep relaxation.",
    icon: `<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M20.42 4.58a5.4 5.4 0 0 0-7.65 0l-.77.78-.77-.78a5.4 5.4 0 0 0-7.65 0 5.4 5.4 0 0 0 0 7.65L12 20l8.42-8.42a5.4 5.4 0 0 0 0-7.65Z"/></svg>`
  },
  {
    title: "Session Insights",
    description: "Comprehensive training repository with cloud sync. Visualize long-term progress with predictive performance modeling.",
    icon: `<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20v-6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v6"/><path d="M22 20v-11a2 2 0 0 0-2-2h-3"/><path d="M22 20H2"/><path d="M10 20H4"/><path d="M17 9l-5-5-5 5"/></svg>`
  }
];
---

<section id="features" class="container section">
  <div class="section-header fade-in">
    <span class="badge neon-text">Features</span>
    <h2 class="section-title">Precision Engineered for <span class="neon-text">Elite Athletes</span></h2>
    <p class="section-desc">Designed for freedivers who demand absolute perfection in their training data.</p>
  </div>
  
  <div class="features-grid">
    {features.map((feature, index) => (
      <div class="glass-card feature-card fade-in" style={`animation-delay: ${index * 0.15}s`}>
        <div class="feature-icon-box" set:html={feature.icon} />
        <h3 class="feature-title">{feature.title}</h3>
        <p class="feature-text">{feature.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .section-header {
    text-align: center;
    margin-bottom: 6rem;
  }

  .badge {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.5rem;
    padding: 0.4rem 1.2rem;
    background: rgba(0, 242, 255, 0.05);
    border: 1px solid var(--color-primary-glow);
    border-radius: 100px;
  }

  .section-title {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .section-desc {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2.5rem;
  }

  .feature-card {
    padding: 3.5rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary-glow), transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 242, 255, 0.4);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .feature-card:hover::before {
    opacity: 0.1;
  }

  .feature-icon-box {
    width: 64px;
    height: 64px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--glass-border);
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    margin-bottom: 2rem;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .feature-title {
    font-size: 1.75rem;
    margin-bottom: 1.25rem;
  }

  .feature-text {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  @media (max-width: 900px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
    .feature-card {
      padding: 2.5rem;
    }
  }
</style>
