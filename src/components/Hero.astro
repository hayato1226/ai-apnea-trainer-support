<section class="hero-wrapper">
  <div class="mesh-bg"></div>
  <div class="hero container section">
    <div class="hero-content fade-in">
      <div class="app-info">
        <div class="icon-pulse">
          <img
            src="/assets/app-icon.png"
            alt="AI Apnea Trainer Icon"
            class="app-icon"
          />
        </div>
        <span class="badge neon-text">v1.1.0 // ELITE APNEA SYSTEM</span>
      </div>
      <h1 class="hero-title">
        Enter the <br /><span class="extra-bold">Flow State</span>
      </h1>
      <p class="hero-description">
        Scientific breath-hold training meets AI-driven performance
        optimization. Master your physiology with the world's most advanced
        apnea dashboard.
      </p>
      <div class="hero-actions">
        <a
          href="https://apps.apple.com/app/ai-apnea-trainer/id6758535310"
          class="btn btn-primary"
        >
          Get Started â€” Free
        </a>
        <div class="secondary-actions">
          <a href="#screenshots" class="text-link">System Overview</a>
        </div>
      </div>
    </div>
    <div class="hero-visual fade-in" style="animation-delay: 0.4s">
      <div class="device-container">
        <div class="screen-glow-v2"></div>
        <img
          src="/assets/raw/01_Dashboard.png"
          alt="AI Apnea Trainer Dashboard High Res"
          class="main-screenshot"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-wrapper {
    position: relative;
    overflow: hidden;
  }

  .hero {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: 10rem;
    align-items: center;
    position: relative;
    z-index: 10;
  }

  .app-info {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .icon-pulse {
    position: relative;
  }

  .icon-pulse::after {
    content: "";
    position: absolute;
    inset: -10px;
    background: var(--color-primary);
    filter: blur(20px);
    opacity: 0.15;
    border-radius: 20px;
    animation: icon-glow 4s ease-in-out infinite alternate;
  }

  @keyframes icon-glow {
    0% {
      opacity: 0.1;
      transform: scale(0.9);
    }
    100% {
      opacity: 0.25;
      transform: scale(1.1);
    }
  }

  .app-icon {
    width: 72px;
    height: 72px;
    border-radius: 18px;
    position: relative;
    z-index: 2;
  }

  .badge {
    font-size: 0.8rem;
    font-weight: 800;
    letter-spacing: 0.25em;
    padding: 0.6rem 1.8rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
  }

  .hero-title {
    font-size: clamp(4rem, 10vw, 7.5rem);
    line-height: 0.85;
    margin-bottom: 3.5rem;
    text-transform: uppercase;
  }

  .extra-bold {
    font-weight: 900;
    color: var(--color-primary);
    display: block;
    margin-top: 1rem;
  }

  .hero-description {
    font-size: 1.6rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin-bottom: 5rem;
    line-height: 1.4;
    font-weight: 400;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    align-items: flex-start;
  }

  .text-link {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.9rem;
    color: #fff;
    opacity: 0.5;
    transition: all 0.4s ease;
    border-bottom: 1px solid transparent;
  }

  .text-link:hover {
    opacity: 1;
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  .device-container {
    position: relative;
    perspective: 2000px;
  }

  .main-screenshot {
    width: 100%;
    height: auto;
    border-radius: 56px;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.15),
      0 40px 100px rgba(0, 0, 0, 0.8);
    transform: rotateY(-15deg) rotateX(5deg) scale(1.05);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .device-container:hover .main-screenshot {
    transform: rotateY(-5deg) rotateX(2deg) scale(1.1);
  }

  .screen-glow-v2 {
    position: absolute;
    inset: -10%;
    background: radial-gradient(
      circle,
      var(--color-primary-glow) 0%,
      transparent 60%
    );
    opacity: 0.3;
    pointer-events: none;
    z-index: -1;
  }

  @media (max-width: 1200px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 8rem;
    }
    .app-info,
    .hero-actions {
      align-items: center;
    }
    .hero-title {
      font-size: clamp(3rem, 12vw, 5.5rem);
    }
    .main-screenshot {
      transform: none;
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>
