---
const screens = [
  {
    id: "dashboard",
    title: "Cockpit Dashboard",
    desc: "Scientific precision, simplified.",
    img: "/assets/raw/01_Dashboard.png",
  },
  {
    id: "logbook",
    title: "Metabolic History",
    desc: "Consistency becomes depth.",
    img: "/assets/raw/02_Logbook.png",
  },
  {
    id: "coach",
    title: "Adaptive AI Coach",
    desc: "Your evolution, tracked.",
    img: "/assets/raw/04_CoachFeedback.png",
  },
  {
    id: "session",
    title: "Immersive UI",
    desc: "Focus where it matters.",
    img: "/assets/raw/06_TrainingSession.png",
  },
  {
    id: "analytics",
    title: "Bio-Analytics",
    desc: "Elite physiological data.",
    img: "/assets/raw/08_LogbookDetail.png",
  },
  {
    id: "tables",
    title: "Custom Training",
    desc: "Elite CO2/O2 tables.",
    img: "/assets/raw/05_TableDetail.png",
  },
];
---

<section id="screenshots" class="screenshots-section">
  <div class="container section">
    <div class="section-header fade-in">
      <h2 class="section-title">The <span class="neon-text">System</span></h2>
      <p class="section-desc">
        A professional ecosystem designed for absolute control over your apnea
        journey.
      </p>
    </div>

    <div class="swipe-hint fade-in">
      <span class="hint-text">Swipe to explore</span>
      <div class="hint-arrows">
        <svg
          viewBox="0 0 24 24"
          width="20"
          height="20"
          stroke="currentColor"
          stroke-width="2"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="arrow-icon"
          ><polyline points="13 17 18 12 13 7"></polyline><polyline
            points="6 17 11 12 6 7"></polyline></svg
        >
      </div>
    </div>

    <div class="carousel-container fade-in">
      <button class="carousel-nav prev" aria-label="Previous slide">
        <svg
          viewBox="0 0 24 24"
          width="24"
          height="24"
          stroke="currentColor"
          stroke-width="2"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><polyline points="15 18 9 12 15 6"></polyline></svg
        >
      </button>

      <div class="carousel-viewport" id="carousel-viewport">
        {
          screens.map((screen) => (
            <div class="carousel-item" id={`slide-${screen.id}`}>
              <div class="glass-card carousel-card">
                <div class="screenshot-container">
                  <img
                    src={screen.img}
                    alt={screen.title}
                    class="carousel-img"
                    loading="lazy"
                  />
                </div>
                <div class="carousel-info">
                  <h3>{screen.title}</h3>
                  <p>{screen.desc}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <button class="carousel-nav next" aria-label="Next slide">
        <svg
          viewBox="0 0 24 24"
          width="24"
          height="24"
          stroke="currentColor"
          stroke-width="2"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><polyline points="9 18 15 12 9 6"></polyline></svg
        >
      </button>

      <div class="carousel-pagination">
        {
          screens.map((_, index) => (
            <button
              class={`pagination-dot ${index === 0 ? "active" : ""}`}
              data-index={index}
              aria-label={`Go to slide ${index + 1}`}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  const viewport = document.getElementById("carousel-viewport");
  const prevBtn = document.querySelector(".carousel-nav.prev");
  const nextBtn = document.querySelector(".carousel-nav.next");
  const dots = document.querySelectorAll(".pagination-dot");

  if (viewport && prevBtn && nextBtn) {
    const scrollStep = () => {
      const firstItem = viewport.querySelector(".carousel-item");
      return firstItem ? (firstItem as HTMLElement).offsetWidth + 32 : 0; // width + gap
    };

    prevBtn.addEventListener("click", () => {
      viewport.scrollBy({ left: -scrollStep(), behavior: "smooth" });
    });

    nextBtn.addEventListener("click", () => {
      viewport.scrollBy({ left: scrollStep(), behavior: "smooth" });
    });

    viewport.addEventListener("scroll", () => {
      const scrollLeft = viewport.scrollLeft;
      const step = scrollStep();
      const index = Math.round(scrollLeft / step);

      dots.forEach((dot, i) => {
        dot.classList.toggle("active", i === index);
      });
    });
  }
</script>

<style>
  .screenshots-section {
    position: relative;
    padding: 10rem 0;
    background: radial-gradient(
      circle at 50% 100%,
      rgba(0, 243, 255, 0.05) 0%,
      transparent 50%
    );
  }

  .section-header {
    margin-bottom: 6rem;
    text-align: center;
  }

  .section-title {
    font-size: clamp(3rem, 6vw, 4.5rem);
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .section-desc {
    font-size: 1.4rem;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
  }

  .swipe-hint {
    display: none;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.8rem;
    opacity: 0.8;
  }

  .hint-arrows {
    animation: bounce-x 2s infinite;
  }

  @keyframes bounce-x {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(10px);
    }
  }

  .carousel-container {
    position: relative;
    padding: 0 4rem;
  }

  .carousel-viewport {
    display: flex;
    gap: 3.2rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    padding: 2rem 0;
    margin: 0 -1rem;
  }

  .carousel-viewport::-webkit-scrollbar {
    display: none;
  }

  .carousel-item {
    flex: 0 0 400px;
    scroll-snap-align: center;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .carousel-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0;
    overflow: hidden;
    border-radius: 32px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .screenshot-container {
    aspect-ratio: 9/19.5;
    overflow: hidden;
    position: relative;
    padding: 1rem 1rem 0 1rem;
    background: rgba(0, 0, 0, 0.4);
  }

  .carousel-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    border-radius: 24px 24px 0 0;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .carousel-info {
    padding: 2.5rem;
    text-align: center;
  }

  .carousel-info h3 {
    font-size: 1.6rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .carousel-info p {
    color: var(--color-text-muted);
    font-size: 1rem;
    font-weight: 500;
  }

  .carousel-nav {
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .carousel-nav:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-50%) scale(1.1);
  }

  .carousel-nav.prev {
    left: -1rem;
  }
  .carousel-nav.next {
    right: -1rem;
  }

  .carousel-pagination {
    display: flex;
    justify-content: center;
    gap: 1.2rem;
    margin-top: 4rem;
  }

  .pagination-dot {
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .pagination-dot.active {
    width: 32px;
    background: var(--color-primary);
    box-shadow: 0 0 15px var(--color-primary-glow);
  }

  @media (max-width: 768px) {
    .screenshots-section {
      padding: 6rem 0;
    }
    .swipe-hint {
      display: flex;
    }
    .carousel-item {
      flex: 0 0 310px;
      scroll-snap-align: center;
    }
    .carousel-viewport {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
      gap: 1.5rem;
      margin: 0;
      scroll-padding-left: 1.5rem;
      scroll-padding-right: 1.5rem;
    }
    .carousel-container {
      padding: 0;
    }
    .screenshot-container {
      padding: 0.8rem 0.8rem 0 0.8rem;
    }
    .carousel-nav {
      display: none;
    }
    .carousel-info {
      padding: 1.5rem;
    }
    .carousel-info h3 {
      font-size: 1.25rem;
    }
    .carousel-info p {
      font-size: 0.85rem;
    }
    .carousel-pagination {
      margin-top: 3rem;
    }
  }
</style>
